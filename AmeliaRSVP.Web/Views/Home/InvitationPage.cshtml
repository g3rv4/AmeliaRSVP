@model InvitationPage

<div class="flex h-screen">
    <div class="m-auto">
        <form method="post">
            <div>
                Hola @Model.Invitation.Name !!! :)
            </div>
            <div>
                Vas a venir al cumpleaños?
                <label><input type="radio" name="@nameof(InvitationPage.RSVPResponse)" class="js-response-field" value="True"/> Si</label>
                <label><input type="radio" name="@nameof(InvitationPage.RSVPResponse)" class="js-response-field" value="False"/> No</label>
            </div>
            <div style="display: none;" class="js-show-when-ok">
                Cuantos adultes van a venir?
                <div class="inline-block relative w-64">
                  <select name="@nameof(Model.ConfirmedAdults)" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                    @for (var i = 1; i <= Model.Invitation.MaxAdults; i++)
                    {
                        <option value="@i">@i adulte@(i == 1 ? "" : "s")</option>
                    }
                  </select>
                  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                  </div>
                </div>
            </div>
            @if (Model.Invitation.MaxKids > 0)
            {
                <div style="display: none;" class="js-show-when-ok">
                    Cuantos niñes van a venir?
                    <div class="inline-block relative w-64">
                      <select name="@nameof(Model.ConfirmedKids)" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                        @for (var i = 0; i <= Model.Invitation.MaxKids; i++)
                        {
                            <option value="@i">@i niñe@(i == 1 ? "" : "s")</option>
                        }
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                      </div>
                    </div>
                </div>
            }
            @if (Model.Invitation.MaxBabies > 0)
            {
                <div style="display: none;" class="js-show-when-ok">
                    Cuantos bebés van a venir?
                    <div class="inline-block relative w-64">
                      <select name="@nameof(Model.ConfirmedBabies)" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                        @for (var i = 0; i <= Model.Invitation.MaxBabies; i++)
                        {
                            <option value="@i">@i bebé@(i == 1 ? "" : "s")</option>
                        }
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                      </div>
                    </div>
                </div>
            }
            <button type="submit" class="js-show-when-selected bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" style="display: none;">Confirmar!</button>
        </form>
    </div>
</div>

@section Javascript
{
    <script type="text/javascript">
    $(document).ready(function() {
        $('.js-response-field').click(function (){
            if ($(this).val() === "True") {
                $('.js-show-when-ok').show();
            } else {
                $('.js-show-when-ok').hide();
            }
            $('.js-show-when-selected').show();
        });
    });
    </script>
}
